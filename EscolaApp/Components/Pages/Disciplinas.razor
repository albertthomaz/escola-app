@page "/disciplinas"
@layout Layout.MainLayout
@using EscolaApp.Models
@using EscolaApp.Services
@inject DisciplinaService DisciplinaService;

<h3 class="mb-4">ðŸ“š Disciplinas do Aluno</h3>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var disciplina in _disciplinas)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">@disciplina.Nome</h5>
                    <p class="card-text text-muted">
                        @disciplina.Atividades.Count atividade(s)
                    </p>
                    <a class="btn btn-primary mt-auto" href="@($"/disciplinas/{disciplina.Id}")">
                        Ver Atividades
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Disciplina> _disciplinas = [];

    protected override async Task OnInitializedAsync()
    {
        _disciplinas = await DisciplinaService.GetDisciplinas();
    }
}